{
  "$schema": "https://purity-analyzer.dev/schema/config.json",
  
  // Trust mode: "standard" | "strict" | "zero-trust"
  // - standard: Trust BCL whitelist, [EnforcedPure] in refs, and .purity/whitelist/
  // - strict:   Re-verify [EnforcedPure] in referenced assemblies  
  // - zero-trust: Only .purity/whitelist/ is trusted (for LLM-assisted review)
  "trustMode": "standard",
  
  // Methods to explicitly mark as impure (overrides any whitelist)
  // Use this if you disagree with a built-in whitelist entry
  "exclude": [
    // Examples:
    // "System.Math.DivRem"
  ],
  
  // Methods in .purity/whitelist/ that are flagged for future review (emits PUR011)
  // Use this during gradual adoption to track unverified assumptions
  "reviewRequired": [
    // Examples:
    // "ThirdParty.Lib.Calculate"
  ],
  
  // Output pending-review.json manifest for LLM-assisted review workflow
  // Enable this in zero-trust mode to generate review tasks
  "outputPendingReview": false
}
